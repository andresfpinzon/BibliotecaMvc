@model IEnumerable<BibliotecaWebApplicationMVC.Models.Revista>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPublicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publicacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPublicacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publicacion.PublicacionId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RevistaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RevistaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RevistaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
