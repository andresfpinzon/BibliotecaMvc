@model BibliotecaWebApplicationMVC.Models.Autor

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label asp-for="Nombres" class="control-label"></label>
            <input asp-for="Nombres" class="form-control" />
            <span asp-validation-for="Nombres" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Apellidos" class="control-label"></label>
            <input asp-for="Apellidos" class="form-control" />
            <span asp-validation-for="Apellidos" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nacionalidad" class="control-label"></label>
            <input asp-for="Nacionalidad" class="form-control" />
            <span asp-validation-for="Nacionalidad" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label">Foto</label>
            <input type="file" name="foto" class="form-control" />
        </div>
        <div class="form-group">
            <div class="form-group">
                <button type="submit" class="btn btn-create"><i class="fas fa-save"></i> Guardar</button>
                <a asp-action="Index" class="btn btn-back"><i class="fas fa-arrow-left"></i> Volver</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
